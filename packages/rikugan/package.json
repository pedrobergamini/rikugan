{
  "name": "rikugan",
  "version": "1.1.0",
  "private": false,
  "type": "module",
  "bin": {
    "rikugan": "dist/cli/index.js"
  },
  "main": "dist/cli/index.js",
  "types": "dist/cli/index.d.ts",
  "files": [
    "dist",
    "ui/dist",
    "schemas",
    "artifacts",
    "fixtures"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pedrobergamini/rikugan.git"
  },
  "homepage": "https://github.com/pedrobergamini/rikugan",
  "bugs": {
    "url": "https://github.com/pedrobergamini/rikugan/issues"
  },
  "scripts": {
    "build": "pnpm run build:ui && pnpm run build:ts",
    "build:ts": "tsup",
    "build:ui": "pnpm -C ui build",
    "dev:ui": "pnpm -C ui dev",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --max-warnings=0",
    "format": "prettier --write .",
    "test": "pnpm run build && vitest run && playwright test",
    "test:ui": "playwright test",
    "test:unit": "vitest run"
  },
  "dependencies": {
    "chalk": "5.4.1",
    "commander": "12.1.0",
    "express": "4.19.2",
    "execa": "9.5.2",
    "open": "10.1.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-diff-view": "3.3.2",
    "ulid": "2.3.0",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "9.17.0",
    "@playwright/test": "1.50.1",
    "@types/express": "4.17.21",
    "@types/node": "22.10.6",
    "@types/react": "18.3.18",
    "@types/react-dom": "18.3.5",
    "@typescript-eslint/eslint-plugin": "8.19.1",
    "@typescript-eslint/parser": "8.19.1",
    "eslint": "9.17.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-react": "7.37.2",
    "eslint-plugin-react-hooks": "4.6.2",
    "globals": "15.14.0",
    "prettier": "3.4.2",
    "tsup": "8.3.5",
    "typescript": "5.7.3",
    "vite": "5.4.11",
    "vitest": "2.1.8",
    "react-router-dom": "6.28.1"
  }
}
